<h1><%= t ".title" %></h1>
    <% if user_signed_in? %>
        <%= link_to "New product", new_product_path %>
    <% end %>
    <div id="products">
        <% @products.each do |product| %>
            <div class="product-item">
                <%= link_to product.name, product %>
            </div>
        <% end %>
    </div>
